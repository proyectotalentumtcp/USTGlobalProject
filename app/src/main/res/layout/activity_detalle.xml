<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.iuris.ustglobalproject.DetalleActivity"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bordes"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detalle de usuario"
            android:textSize="18sp"
            android:textStyle="normal"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"

            />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="100dp"
            android:src="@drawable/usuario3"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Usuario"
            android:textSize="18sp"
            android:textColor="#00a8e6"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        >

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/usuario3"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Nombre"
        android:textStyle="bold"
        android:id="@+id/nombreDetalle"
        android:textColor="#666"
        android:layout_toRightOf="@+id/imagen"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Apellido1"
        android:textStyle="bold"
        android:textColor="#666"
        android:layout_marginLeft="10dp"
        android:id="@+id/apellido1Detalle"
        android:layout_toRightOf="@+id/imagen"
        android:layout_alignParentTop="true"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Apellido2"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:id="@+id/apellido2Detalle"
        android:layout_alignParentTop="true"
        />

        </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Telefono Movil:"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/telefonoDetalle"
        android:tag="@string/telefono"
        android:clickable="true"
        android:longClickable="true"
        android:onClick="onClick"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Telefono Directo:"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/telefonoDetalle"
        android:tag="@string/telefono"
        android:clickable="true"
        android:longClickable="true"
        android:onClick="onClick"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="CorreoDetalle"
        android:id="@+id/correoDetalle"
        android:tag="@string/correo"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:clickable="true"
        android:longClickable="true"
        android:onClick="onClick"
        />

    <Button android:id="@+id/agenda"
        android:layout_width="150dp"
        android:background="#f61b40"
        android:textStyle="bold"
        android:layout_height="30dp"
        android:tag="@string/guardar"
        android:text="Agregar Contacto"
        android:textColor="#ffffff"
        android:fontFamily="sans-serif-medium"
        android:onClick="onClick"
        android:layout_gravity="center"
        android:layout_marginTop="220dp"
        android:clickable="true"
        />


</LinearLayout>
